<h1 class="center-align">Burger-Slice App!</h1>

<div class="center-align">
  <h2>Burgers that are ready to be eaten!</h2>

    <ul>
      {{#each burgers}}
      {{#unless devoured}}
      {{> burgers/burger-block devoured=true}}
      {{/unless}}
      {{/each}}
    </ul>
</div>

<div class="center-align">
  <h2>Burgers that are devoured!</h2>

    <ul>
      {{#each burgers}}
      {{#if devoured}}
      {{> burgers/burger-block devoured=false}}
      {{/if}}
      {{/each}}
    </ul>
</div>

<div class="center-align">
  <h2>Add a Burger</h2>
    <form class="create-form">

      <div class="form-group">
        <label for="ca">Burger Name:</label>
        <input type="text" id="ca" name="name">
      </div>

      <div class="form-group">
        <label for="slee">Devoured?</label><br>
        <input type="radio" name="vegan" value="1" checked> Devoured!<br>
        <input type="radio" name="vegan" value="0"> Ready to be Devoured!
      </div>

      <button type="submit">Add Burger</button>
    </form>

</div>